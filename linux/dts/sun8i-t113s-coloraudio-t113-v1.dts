&i2c1 {
	pinctrl-0 = <&i2c1_pins_a>;
	pinctrl-names = "default";
	status = "okay";
};

&i2c2 {
	pinctrl-0 = <&i2c2_pins_a>;
	pinctrl-names = "default";
	status = "okay";
};

&i2s1 {
	tdm_config = <0x01>;
	pinctrl-names= "default";
	pinctrl-0 = <&i2s1_pins_a>;
	status = "okay";
};